library(readr)
umsatzdaten <- read_csv("https://raw.githubusercontent.com/christophson3/Data-science-Team-8/main/umsatzdaten.csv",     col_types = cols(X1 = col_skip()))

####Boxplot mit KI für Vortagsumsatz sowie Warengruppe####

#daten zusammenfassen und als Graphen darstellen
library(ggplot2)
library(dplyr)

cleandata <- umsatzdaten %>%
  group_by(Warengruppe) %>%
  summarize(mean_um = mean(Vortagsumsatz), sd_um = sd(Vortagsumsatz),
            count = n(), se_um = (sd_um/sqrt(count)))
View(cleandata)

vum_wg_plot <- ggplot(cleandata, aes(x = Warengruppe, y=mean_um)) +
  geom_bar(stat = "identity", color = "blue",
           position = position_dodge()
           ) +
  geom_errorbar(aes(ymin = mean_um-se_um, ymax = mean_um + se_um), width = .3
                ) +
  theme_classic()

vum_wg_plot




####Boxplot mit KI für Bewölkung sowie Umsatz####
cleandata_wert <- umsatzdaten %>%
  group_by(Bewoelkung) %>%
  summarize(mean_u = mean(Umsatz), sd_u = sd(Umsatz),
            count = n(), se_u = (sd_u/sqrt(count)))
View(cleandata_wert)

um_WT_plot <- ggplot(cleandata_wert, aes(x = Bewoelkung, y=mean_u)) +
  geom_bar(stat = "identity", color = "red",
           position = position_dodge()
  ) +
  geom_errorbar(aes(ymin = mean_u-se_u, ymax = mean_u + se_u), width = .3
  ) +
  theme_classic()

um_WT_plot
